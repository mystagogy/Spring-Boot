<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.admin.mapper.IndexMapper">
    <select id="selectCntMember" resultType="int">
        select
            count(email)
        from member
    </select>

    <select id="selectAmountPayment" resultType="double">
        select
            sum(amount)
        from payment
    </select>

    <select id="selectCntBuy" resultType="int">
        select
            count(id)
        from buy
    </select>

    <select id="selectCntContact" resultType="int">
        select
            count(id)
        from buy
    </select>
</mapper>